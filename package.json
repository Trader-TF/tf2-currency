{
  "name": "tf2-currency",
  "version": "0.0.1",
  "description": "Set of tools that manage operations with tf2 currency.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npx jest",
    "test:coverage": "npx jest --coverage",
    "build": "npx tsc",
    "format": "npx prettier -w \"./src/**.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Trader-TF/tf2-currency.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Trader-TF/tf2-currency/issues"
  },
  "homepage": "https://github.com/Trader-TF/tf2-currency#readme",
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "jest": "^27.1.1",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
